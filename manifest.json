{
    "name": "Retina image checker",
    "description" : "check every srcset property of img tags and display them all",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
      "default_icon": {
          "16": "icon.png",
          "32": "icon_32.png",
          "128": "icon_128.png"
      }
    },
    "content_scripts" : [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["app.js"]
        }
    ],
    "background": {
        "scripts": ["bg.js"],
        "persistent": true
    },
    "icons": {
        "16": "icon.png",
        "32": "icon_32.png",
        "128": "icon_128.png"
    }
}
